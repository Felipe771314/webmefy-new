{% assign show_free_shipping_bar = settings.cart_show_free_shipping_threshold %}

{% if settings.cart_free_shipping_exceptions_tags != blank %}
  {%- for line_item in cart.items -%}
    {% for tag in line_item.product.tags %}
      {% if settings.cart_free_shipping_exceptions_tags contains tag %}
        {% assign show_free_shipping_bar = false %}
      {% endif %}
    {% endfor %}
  {% endfor %}
{% endif %}

{% if show_free_shipping_bar %}
  {% render 'free_shipping_bar' %}
{% endif %}
