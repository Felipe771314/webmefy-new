
{% schema %}
{
  "name": "TextInput",
  "settings": [
    {
      "type": "text",
      "id": "id",
      "label": "Id",
      "default": ""
    },
    {
      "type": "text",
      "id": "name",
      "label": "Name",
      "default": ""
    },
    {
      "type": "text",
      "id": "value",
      "label": "Value",
      "default": ""
    },
    {
      "type": "text",
      "id": "placeholder",
      "label": "Placeholder",
      "default": ""
    },
    {
      "type": "text",
      "id": "onChange",
      "label": "OnChange",
      "default": ""
    },
    {
      "type": "checkbox",
      "id": "disabled",
      "label": "Disabled",
      "default": ""
    },
    {
      "type": "number",
      "id": "type",
      "label": "Type",
      "default": ""
    }
  ]
}
{% endschema %}

<!-- Plantilla Liquid para TextInput -->
<div class="textinput">
  {%- for setting in section.settings -%}
    <p>{{ setting.id }}: {{ section.settings[setting.id] }}</p>
  {%- endfor -%}
</div>
