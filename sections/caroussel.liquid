{{ 'caroussel.scss' | asset_url | stylesheet_tag }}

{%- style -%}
.caroussel {
  padding: 20px;
}
{%- endstyle -%}

{%- liquid
  assign title = section.settings.title
-%}

<!-- Caroussel -->
<div class="caroussel section-{{ section.id }}">
  {{ title }}
  {% for block in section.blocks %}
    <p>{{ block.settings.value }}</p>
  {% endfor %}
</div>

{% schema %}
{
  "name": "Caroussel",
  "tag": "section",
  "class": "section-caroussel",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": ""
    },
    {
      "type": "checkbox",
      "id": "autoPlay",
      "label": "Auto Play",
      "default": ""
    },
    {
      "type": "checkbox",
      "id": "showArrows",
      "label": "Show Arrows",
      "default": ""
    },
    {
      "type": "checkbox",
      "id": "loop",
      "label": "Loop",
      "default": ""
    },
    {
      "type": "text",
      "id": "transitionType",
      "label": "Transition Type",
      "default": ""
    },
    {
      "type": "text",
      "id": "itemStyle",
      "label": "Item Style",
      "default": ""
    },
    {
      "type": "text",
      "id": "containerStyle",
      "label": "Container Style",
      "default": ""
    },
    {
      "type": "text",
      "id": "arrowsPosition",
      "label": "Arrows Position",
      "default": ""
    }
  ],
  "blocks": [
    {
      "type": "items",
      "name": "Items",
      "settings": [
        {
          "type": "text",
          "id": "value",
          "label": "Value",
          "default": ""
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Caroussel",
      "category": "Custom",
      "blocks": [
        {
          "type": "items"
        }
      ]
    }
  ]
}
{% endschema %}