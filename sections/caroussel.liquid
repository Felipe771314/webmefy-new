{{ 'caroussel.scss' | asset_url | stylesheet_tag }}

{%- style -%}
.caroussel {
  padding: 20px;
}
{%- endstyle -%}

{%- liquid
  assign title = section.settings.title
-%}

<!-- Caroussel -->
<div class="caroussel section-{{ section.id }}">
  {{ title }}
  {% for block in section.blocks %}
    <p>{{ block.settings.value }}</p>
  {% endfor %}
</div>

{% schema %}
  {
    "name": "Caroussel",
    "tag": "section",
    "class": "section-caroussel",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Title",
        "default": "TÃ­tulo del carrusel"
      },
      {
        "type": "checkbox",
        "id": "autoPlay",
        "label": "Auto Play",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "showArrows",
        "label": "Show Arrows",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "loop",
        "label": "Loop",
        "default": false
      },
      {
        "type": "text",
        "id": "transitionType",
        "label": "Transition Type",
        "default": "fade"
      },
      {
        "type": "text",
        "id": "itemStyle",
        "label": "Item Style",
        "default": "style-1"
      },
      {
        "type": "text",
        "id": "containerStyle",
        "label": "Container Style",
        "default": "container-fluid"
      },
      {
        "type": "text",
        "id": "arrowsPosition",
        "label": "Arrows Position",
        "default": "left"
      }
    ],
    "blocks": [
      {
        "type": "items",
        "name": "Items",
        "settings": [
          {
            "type": "text",
            "id": "value",
            "label": "Value",
            "default": "Slide 1"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Caroussel",
        "category": "Custom",
        "blocks": [
          {
            "type": "items"
          }
        ]
      }
    ]
  }
  {% endschema %}
  