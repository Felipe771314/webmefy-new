{{ 'forminputgroup.scss' | asset_url | stylesheet_tag }}

{%- style -%}
.forminputgroup {
  padding: 20px;
}
{%- endstyle -%}

{%- liquid
  assign title = section.settings.title
-%}

<!-- FormInputGroup -->
<div class="forminputgroup section-{{ section.id }}">
  {{ title }}
</div>

{% schema %}
{
  "name": " Form Input Group",
  "tag": "section",
  "class": "section-forminputgroup",
  "settings": [
    {
      "type": "text",
      "id": "label",
      "label": "Label",
      "default": ""
    },
    {
      "type": "text",
      "id": "helpText",
      "label": "Help Text",
      "default": ""
    },
    {
      "type": "text",
      "id": "containerClassName",
      "label": "Container Class Name",
      "default": ""
    }
  ],
  "blocks": [],
  "presets": [
    {
      "name": " Form Input Group",
      "category": "Custom",
      "blocks": []
    }
  ]
}
{% endschema %}