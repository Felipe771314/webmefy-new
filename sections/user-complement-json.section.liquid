{% assign name = customer.first_name | append: ' ' | append: customer.last_name %}
{% capture json %}
{
  "accepts_marketing" : {{ customer.accepts_marketing }},
  "last_order" : "{{ customer.last_order.created_at }}",
  "new_customer" : {%- if customer.orders_count == 0 -%}true{%- else -%}false{%- endif -%},
  "orders_count" : {{ customer.orders_count }},
  "has_account" : {{  customer.has_account }},
  "tags" : "{{ customer.tags }}",
  "tax_exempt": {{ customer.tax_exempt }},
  "total_spent": {{ customer.total_spent }},
  "email" : "{{ customer.email  }}",
  "email_sha256" : "{{ customer.email | sha256 }}",
  "email_md5" : "{{ customer.email | md5 }}",
  "last_name" : "{{ customer.last_name  }}",
  "first_name" : "{{ customer.first_name  }}",
  "name_sha256" : "{{ name |  sha256 }}",
  "city" : "{{ customer.default_adress.city  }}",
  "country" : "{{ customer.default_adress.country  }}",
  "country_code" : "{{ customer.default_adress.country_code  }}",
  "zip" : "{{ customer.default_adress.zip  }}",
  "province" : "{{ customer.default_adress.province  }}",
  "address1" : "{{ customer.default_adress.address1  }}",
  "address2" : "{{ customer.default_adress.address2  }}",
  "phone" : "{{ customer.default_adress.phone  }}"
}
{% endcapture %}
{{ json }}
