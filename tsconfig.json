{
  "compilerOptions": {
    "jsx": "preserve", // Correcto para React 17+ y Next.js.
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node", "jest", "next", "@storybook/react"], // Se incluyen los tipos para Storybook.
    "baseUrl": "./",
    "paths": {
      "@components/*": ["components/*"],
      "@utils/*": ["utils/*"],
      "@styles/*": ["styles/*"],
      "@storybook/*": [".storybook/*"]
    },
    "lib": ["dom", "dom.iterable", "esnext"],
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "isolatedModules": true,
    "strictNullChecks": true
  },
  "include": ["**/*.ts", "**/*.tsx", ".storybook/**/*.ts", "next-env.d.ts", ".next/types/**/*.ts"],
  "exclude": ["node_modules", ".storybook/generated", "dist", "build"]
}
