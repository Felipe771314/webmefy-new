
{% schema %}
{
  "name": "Button",
  "settings": [
    {
      "type": "text",
      "id": "label",
      "label": "Label",
      "default": ""
    },
    {
      "type": "text",
      "id": "onClick",
      "label": "OnClick",
      "default": ""
    },
    {
      "type": "text",
      "id": "variant",
      "label": "Variant",
      "default": ""
    },
    {
      "type": "text",
      "id": "size",
      "label": "Size",
      "default": ""
    },
    {
      "type": "checkbox",
      "id": "disabled",
      "label": "Disabled",
      "default": ""
    },
    {
      "type": "text",
      "id": "icon",
      "label": "Icon",
      "default": ""
    },
    {
      "type": "checkbox",
      "id": "fullWidth",
      "label": "FullWidth",
      "default": ""
    },
    {
      "type": "text",
      "id": "type",
      "label": "Type",
      "default": ""
    },
    {
      "type": "text",
      "id": "onHover",
      "label": "OnHover",
      "default": ""
    },
    {
      "type": "text",
      "id": "onFocus",
      "label": "OnFocus",
      "default": ""
    },
    {
      "type": "text",
      "id": "onBlur",
      "label": "OnBlur",
      "default": ""
    },
    {
      "type": "text",
      "id": "alignment",
      "label": "Alignment",
      "default": ""
    }
  ]
}
{% endschema %}

<!-- Plantilla Liquid para Button -->
<div class="button">
  {%- for setting in section.settings -%}
    <p>{{ setting.id }}: {{ section.settings[setting.id] }}</p>
  {%- endfor -%}
</div>
