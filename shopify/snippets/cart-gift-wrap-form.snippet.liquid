{% assign cart_gift_wrap_product = settings.cart_gift_wrap %}
{%- assign product_form_id = 'product-cart-gift-wrap-'
  | append: section.id
  | append: '-'
  | append: cart_gift_wrap_product.id
-%}

{%- form 'product',
  cart_gift_wrap_product,
  is: 'product-form',
  id: product_form_id,
  handle: cart_gift_wrap_product.handle
-%}
  <input type="hidden" name="quantity" value="1">
  <input type="hidden" name="id" value="{{ cart_gift_wrap_product.first_available_variant.id }}">
{%- endform -%}
