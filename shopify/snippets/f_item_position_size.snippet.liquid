{% if section.settings.mobile_products_per_row == '1' %}
  {% assign item_col_size_mobile = 12 %}
{% endif %}

{% case layout %}
  {% when 'fixed-3-3/2' %}
    {% render 'f_item_position_size_layout_fixed-3-3_2',
      item_placement: item_placement,
      item_size: item_size,
      item_position: item_position,
      item_position_mobile: item_position_mobile,
      item_col_size_mobile: item_col_size_mobile
    %}
  {% when 'fixed-4-4/2' %}
    {% render 'f_item_position_size_layout_fixed-4-4_2',
      item_placement: item_placement,
      item_size: item_size,
      item_position: item_position,
      item_position_mobile: item_position_mobile,
      item_col_size_mobile: item_col_size_mobile
    %}
  {% when 'alternate-2-4-3/2-2-1-2-2' %}
    {% render 'f_item_position_size_layout_alternate-2-4-3_2-2-1-2-2',
      item_placement: item_placement,
      item_size: item_size,
      item_position: item_position,
      item_position_mobile: item_position_mobile,
      item_col_size_mobile: item_col_size_mobile
    %}
  {% when 'alternate-3-3-2/2-2-2-1-1' %}
    {% render 'f_item_position_size_layout_alternate-3-3-2_2-2-2-1-1',
      item_placement: item_placement,
      item_size: item_size,
      item_position: item_position,
      item_position_mobile: item_position_mobile,
      item_col_size_mobile: item_col_size_mobile
    %}
  {% when 'alternate-4-4-2/2-2-2-2-1-1' %}
    {% render 'f_item_position_size_layout_alternate-4-4-2_2-2-2-2-1-1',
      item_placement: item_placement,
      item_size: item_size,
      item_position: item_position,
      item_position_mobile: item_position_mobile,
      item_col_size_mobile: item_col_size_mobile
    %}
  {% when 'alternate-3-2-4/2-2-1-2-2' %}
    {% render 'f_item_position_size_layout_alternate-3-2-4_2-2-1-2-2',
      item_placement: item_placement,
      item_size: item_size,
      item_position: item_position,
      item_position_mobile: item_position_mobile,
      item_col_size_mobile: item_col_size_mobile
    %}
{% endcase %}
