{%- if section.settings.title != blank or section.settings.subheading != blank or section.settings.content != blank -%}
  <header class="oz-section__header section__header text-container {% if section.settings.content != blank %}section__header--tight{% endif %} {{ section.settings.textblock_alignment }} {% if section.settings.mobile_textblock_alignment != blank %}section__header--mobile-{{ section.settings.mobile_textblock_alignment }}{% endif %}">
    {% render 'block-headings' with section.settings %}
    {% render 'richtext-content',
      richtext_settings: section.settings,
      default_classes: 'oz-section__header-content section__header-content'
    %}
    {%- if extra_content != blank -%}{{ extra_content }}{%- endif -%}
  </header>
{%- endif -%}
