{% schema %}
{
  "name": "Caroussel",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": ""
    },
    {
      "type": "text",
      "id": "items",
      "label": "Items",
      "default": ""
    },
    {
      "type": "checkbox",
      "id": "autoPlay",
      "label": "AutoPlay",
      "default": ""
    },
    {
      "type": "checkbox",
      "id": "showArrows",
      "label": "ShowArrows",
      "default": ""
    },
    {
      "type": "checkbox",
      "id": "loop",
      "label": "Loop",
      "default": ""
    },
    {
      "type": "text",
      "id": "transitionType",
      "label": "TransitionType",
      "default": ""
    },
    {
      "type": "text",
      "id": "itemStyle",
      "label": "ItemStyle",
      "default": ""
    },
    {
      "type": "text",
      "id": "containerStyle",
      "label": "ContainerStyle",
      "default": ""
    },
    {
      "type": "text",
      "id": "arrowsPosition",
      "label": "ArrowsPosition",
      "default": ""
    }
  ],
  "presets": [
    {
      "name": "Caroussel"
    }
  ]
}
{% endschema %}

<div class="caroussel">
  {% assign items = section.settings.items | split: ',' %}
  <h2>{{ section.settings.title }}</h2>
  <div class="caroussel-track" data-transition="{{ section.settings.transitionType }}">
    {% for item in items %}
      <div class="caroussel-item">
        <img src="{{ item | strip }}" alt="slide-{{ forloop.index }}">
      </div>
    {% endfor %}
  </div>
  {% if section.settings.showArrows %}
    <div class="caroussel-arrows {{ section.settings.arrowsPosition }}">
      <button>&lt;</button>
      <button>&gt;</button>
    </div>
  {% endif %}
</div>