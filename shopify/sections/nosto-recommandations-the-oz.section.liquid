{% liquid
  assign nosto_id = section.settings.selected_id
  if section.settings.custom_id != blank
    assign nosto_id = section.settings.custom_id | strip
  endif
%}
{% render 'vite-tag' with '@modules/sections/nosto-recommandations' %}

{% capture extra_style %}
  <style>
		.nosto_element {
			display: none!important;
		}
		@media screen and (min-width: 741px) {
			#shopify-section-{{ section.id }} {
				--section-products-per-row: 3;
			}
		}
		@media screen and (min-width: 1200px) {
			#shopify-section-{{ section.id }} {
				--section-products-per-row: 4;
			}
		}
  </style>
{% endcapture %}

{% capture content %}
  <div product-list>
    <div
      {% if settings.stagger_products_apparition %}
        stagger-apparition
      {% endif %}
      class="product-list product-list--center"
    >
      <div class="scroller">
        <div class="product-list__inner product-list__inner--scroller hide-scrollbar">
          {% assign array = '1,2,3,4' | split: ',' %}
          {% for elem in array %}
            <div class="product-item ">
              <div class="product-item__image-wrapper product-item__image-wrapper--multiple">
                <place-holder width="250" height="250"> </place-holder>
              </div>
            </div>
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
{% endcapture %}

<nosto-wrapper>
  <div class="nosto_element" id="{{ nosto_id }}" nosto-initial-content hidden></div>
  <template>
    {% render 'section-layout', content: content, extra_style: extra_style %}
  </template>
</nosto-wrapper>
