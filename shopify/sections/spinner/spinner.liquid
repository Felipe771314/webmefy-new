{% schema %}
{
  "name": "Spinner",
  "settings": [
    {
      "type": "text",
      "id": "variant",
      "label": "Variant",
      "default": ""
    },
    {
      "type": "text",
      "id": "color",
      "label": "Color",
      "default": ""
    },
    {
      "type": "text",
      "id": "size",
      "label": "Size",
      "default": ""
    }
  ],
  "presets": [
    {
      "name": "Spinner"
    }
  ]
}
{% endschema %}

<div class="spinner">
  {% assign items = section.settings.items | split: ',' %}
  <h2>{{ section.settings.title }}</h2>
  <div class="caroussel-track" data-transition="{{ section.settings.transitionType }}">
    {% for item in items %}
      <div class="caroussel-item">
        <img src="{{ item | strip }}" alt="slide-{{ forloop.index }}">
      </div>
    {% endfor %}
  </div>
  {% if section.settings.showArrows %}
    <div class="caroussel-arrows {{ section.settings.arrowsPosition }}">
      <button>&lt;</button>
      <button>&gt;</button>
    </div>
  {% endif %}
</div>