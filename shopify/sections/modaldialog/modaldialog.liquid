{% schema %}
{
  "name": "ModalDialog",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": ""
    },
    {
      "type": "text",
      "id": "content",
      "label": "Content",
      "default": ""
    },
    {
      "type": "text",
      "id": "primaryActionLabel",
      "label": "PrimaryActionLabel",
      "default": ""
    },
    {
      "type": "text",
      "id": "onPrimaryAction",
      "label": "OnPrimaryAction",
      "default": ""
    },
    {
      "type": "text",
      "id": "secondaryActionLabel",
      "label": "SecondaryActionLabel",
      "default": ""
    },
    {
      "type": "text",
      "id": "onSecondaryAction",
      "label": "OnSecondaryAction",
      "default": ""
    }
  ],
  "presets": [
    {
      "name": "ModalDialog"
    }
  ]
}
{% endschema %}

<div class="modaldialog">
  {% assign items = section.settings.items | split: ',' %}
  <h2>{{ section.settings.title }}</h2>
  <div class="caroussel-track" data-transition="{{ section.settings.transitionType }}">
    {% for item in items %}
      <div class="caroussel-item">
        <img src="{{ item | strip }}" alt="slide-{{ forloop.index }}">
      </div>
    {% endfor %}
  </div>
  {% if section.settings.showArrows %}
    <div class="caroussel-arrows {{ section.settings.arrowsPosition }}">
      <button>&lt;</button>
      <button>&gt;</button>
    </div>
  {% endif %}
</div>