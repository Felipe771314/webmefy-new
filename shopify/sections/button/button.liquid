{% schema %}
{
  "name": "Button",
  "settings": [
    {
      "type": "text",
      "id": "label",
      "label": "Label",
      "default": ""
    },
    {
      "type": "text",
      "id": "onClick",
      "label": "OnClick",
      "default": ""
    },
    {
      "type": "text",
      "id": "variant",
      "label": "Variant",
      "default": ""
    },
    {
      "type": "text",
      "id": "size",
      "label": "Size",
      "default": ""
    },
    {
      "type": "checkbox",
      "id": "disabled",
      "label": "Disabled",
      "default": ""
    },
    {
      "type": "text",
      "id": "icon",
      "label": "Icon",
      "default": ""
    },
    {
      "type": "checkbox",
      "id": "fullWidth",
      "label": "FullWidth",
      "default": ""
    },
    {
      "type": "text",
      "id": "type",
      "label": "Type",
      "default": ""
    },
    {
      "type": "text",
      "id": "onHover",
      "label": "OnHover",
      "default": ""
    },
    {
      "type": "text",
      "id": "onFocus",
      "label": "OnFocus",
      "default": ""
    },
    {
      "type": "text",
      "id": "onBlur",
      "label": "OnBlur",
      "default": ""
    },
    {
      "type": "text",
      "id": "alignment",
      "label": "Alignment",
      "default": ""
    }
  ],
  "presets": [
    {
      "name": "Button"
    }
  ]
}
{% endschema %}

<div class="button">
  {% assign items = section.settings.items | split: ',' %}
  <h2>{{ section.settings.title }}</h2>
  <div class="caroussel-track" data-transition="{{ section.settings.transitionType }}">
    {% for item in items %}
      <div class="caroussel-item">
        <img src="{{ item | strip }}" alt="slide-{{ forloop.index }}">
      </div>
    {% endfor %}
  </div>
  {% if section.settings.showArrows %}
    <div class="caroussel-arrows {{ section.settings.arrowsPosition }}">
      <button>&lt;</button>
      <button>&gt;</button>
    </div>
  {% endif %}
</div>