{% schema %}
{
  "name": "TextInput",
  "settings": [
    {
      "type": "text",
      "id": "id",
      "label": "Id",
      "default": ""
    },
    {
      "type": "text",
      "id": "name",
      "label": "Name",
      "default": ""
    },
    {
      "type": "text",
      "id": "value",
      "label": "Value",
      "default": ""
    },
    {
      "type": "text",
      "id": "placeholder",
      "label": "Placeholder",
      "default": ""
    },
    {
      "type": "text",
      "id": "onChange",
      "label": "OnChange",
      "default": ""
    },
    {
      "type": "checkbox",
      "id": "disabled",
      "label": "Disabled",
      "default": ""
    },
    {
      "type": "number",
      "id": "type",
      "label": "Type",
      "default": ""
    }
  ],
  "presets": [
    {
      "name": "TextInput"
    }
  ]
}
{% endschema %}

<div class="textinput">
  {% assign items = section.settings.items | split: ',' %}
  <h2>{{ section.settings.title }}</h2>
  <div class="caroussel-track" data-transition="{{ section.settings.transitionType }}">
    {% for item in items %}
      <div class="caroussel-item">
        <img src="{{ item | strip }}" alt="slide-{{ forloop.index }}">
      </div>
    {% endfor %}
  </div>
  {% if section.settings.showArrows %}
    <div class="caroussel-arrows {{ section.settings.arrowsPosition }}">
      <button>&lt;</button>
      <button>&gt;</button>
    </div>
  {% endif %}
</div>