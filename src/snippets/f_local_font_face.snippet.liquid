{%- capture local_font_type -%}
    {%- if font_url contains ".otf"-%}
        opentype
    {%- elsif font_url contains ".ttf"-%}
        truetype
    {%- elsif font_url contains ".woff2"-%}
        woff2
    {%- elsif cfont_url contains ".woff"-%}
        woff
    {%- endif -%}
{%- endcapture -%}

@font-face { font-family: {{ font_name }}; src: url("{{ font_url }}") format("
{{- local_font_type | strip | strip_newlines -}}
"); }
