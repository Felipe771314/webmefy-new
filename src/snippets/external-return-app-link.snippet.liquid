{%- assign link_type = link_type | default: 'menu-link' -%}
{%- assign app_link = '' -%}

{%- case link_type -%}
  {%- when 'menu-link' -%}
    {%- assign app_link = settings.external_return_app_menu_link | default: '' -%}
  {%- when 'order-link' -%}
    {%- assign app_link = settings.external_return_app_order_link | default: '' -%}
{%- endcase -%}

{%- if app_link != blank and order -%}
  {%- assign app_link = app_link | replace: '[order_id]', order.id -%}
  {%- assign app_link = app_link | replace: '[order_name]', order.name -%}
  {%- assign app_link = app_link | replace: '[email]', order.email -%}
{%- endif -%}

{{- app_link -}}
