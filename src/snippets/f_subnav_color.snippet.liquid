{%- assign link_title = link.title | strip | downcase -%}
{%- for subnav_colors_block in subnav_colors_blocks -%}
  {%- assign submenu_item = subnav_colors_block.settings.item | strip | downcase -%}
  {%- if submenu_item == link_title and subnav_colors_block.settings.color != blank -%}
    --subnav-color: {{ subnav_colors_block.settings.color.red }}, {{ subnav_colors_block.settings.color.green }},
    {{- subnav_colors_block.settings.color.blue -}}
    ;
    {%- break -%}
  {%- endif -%}
{%- endfor -%}
